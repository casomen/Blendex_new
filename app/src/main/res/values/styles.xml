<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTheme" parent="@style/AppTheme">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/EditTextColorBlack</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/EditTextColorBlack</item>
        <item name="background">@android:color/transparent</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/EditTextColorBlack</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/EditTextColorBlack</item>
        <item name="colorPrimary">@color/EditTextColorBlack</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>


    <style name="AppThemeStart" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FFF</item>
        <item name="android:progressTint" tools:targetApi="lollipop">#FFF</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#FFF</item>
    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/EditTextColorBlack</item>
        <item name="colorAccent">@color/EditTextColorBlack</item>
        <item name="colorControlNormal">@color/EditTextColorBlack</item>
        <item name="colorControlActivated">@color/EditTextColorBlack</item>
    </style>
    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/EditTextColorBlack</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimaryDark">#fff</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="CheckboxWhiteCheck">
        <item name="colorAccent">#fff</item>
    </style>


</resources>

